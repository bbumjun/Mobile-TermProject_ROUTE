<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow android:layout_width="match_parent">


            <ImageButton
                android:id="@+id/runText"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:background="@drawable/shape"
                android:cropToPadding="false"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/travel"
                />


            <ImageButton
                android:id="@+id/shareText"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:background="@drawable/shape"
                android:cropToPadding="false"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/share" />


            <ImageButton
                android:id="@+id/setText"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@drawable/shapewithcolor"
                android:src="@drawable/settings"
                android:scaleType="centerInside"
                android:padding="10dp"
                />

        </TableRow>
    </TableLayout>


    <LinearLayout
        android:id="@+id/settingFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tableMenu"
        android:background="#33FFFFFF"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="User Info"
            android:layout_marginTop="5dp"
            android:textStyle="bold|italic"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:text="ID: "
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txtView"
                android:text="chany219"

                android:textSize="20dp" />

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/deleteAccountBtn"
                android:text="Logout"
                android:textColor="#1994F9"
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shapebutton"
                />

            <Button
                android:id="@+id/deleteAccountBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#1994F9"
                android:background="@drawable/shapebutton"
                android:text="Withdrawal"
                android:textSize="10sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Velocity Control"
                android:textSize="20dp"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="save"
                android:textColor="#1994F9"
                android:padding="5dp"
                android:textSize="12sp"
                android:background="@drawable/shapebutton"

                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <NumberPicker

                android:id="@+id/picker1"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="53dp" />

            <TextView
                android:id="@+id/km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="128dp"
                android:text="KM"
                android:textSize="30dp" />

            <ToggleButton
                android:id="@+id/maxVelocityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="67dp"
                android:layout_marginTop="33dp"
                android:textOff="Max"

                android:textOn="Max" />

            <ToggleButton
                android:id="@+id/minVelocityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="67dp"
                android:layout_marginTop="105dp"
                android:textOff="Min"
                android:textOn="Min" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Sound control"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="save"
                android:textSize="12sp"
                android:background="@drawable/shapebutton"
                android:textColor="#1994F9"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:text="Music Volume" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:max="200"
                android:progress="50" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBar1"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:text="Around Volume" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:max="200"
                android:progress="50" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>