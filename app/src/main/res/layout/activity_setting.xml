<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tableMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow android:layout_width="match_parent">


                <ImageButton
                    android:id="@+id/runText"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape"
                    android:cropToPadding="false"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/travel" />


                <ImageButton
                    android:id="@+id/shareText"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape"
                    android:cropToPadding="false"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/share" />


                <ImageButton
                    android:id="@+id/setText"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:background="@drawable/shapewithcolor"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/settings" />

            </TableRow>
        </TableLayout>


        <LinearLayout
            android:id="@+id/settingFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tableMenu"
            android:background="#22111111"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/userInfo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/userInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapewithcolor"

                    android:padding="5dp"
                    android:text="User Info"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />


                <RelativeLayout
                    android:id="@+id/test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userInfoText"
                    android:layout_margin="5dp"
                    android:background="#FFFFFF">

                    <ImageView
                        android:id="@+id/userIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:padding="5dp"
                        android:src="@drawable/user" />


                    <TextView
                        android:id="@+id/userText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/userIcon"
                        android:padding="5dp"
                        android:text="USER:"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/userText"
                        android:layout_toRightOf="@+id/userText"
                        android:text="chany219"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/userUidText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/userText"
                        android:layout_below="@id/userText"
                        android:padding="5dp"
                        android:text="Email:"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userUid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/userUidText"
                        android:layout_toRightOf="@+id/userUidText"
                        android:text=""

                        android:textSize="18dp" />


                    <Button
                        android:id="@+id/logoutBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@id/deleteIDBtn"
                        android:background="@drawable/shapebutton"
                        android:text="Logout"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/deleteIDBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/shapebutton"
                        android:text="Withdrawal"
                        android:textSize="10sp" />


                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#FFFFFF">


                <TextView
                    android:id="@+id/settingFunction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shapewithcolor"
                    android:padding="5dp"
                    android:text="Function Setting"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />


                <TextView
                    android:id="@+id/ssfText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/settingFunction"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Speed Safety Function"
                    android:textSize="20dp" />


                <ToggleButton
                    android:id="@+id/toggleLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ssfText"

                    android:layout_alignEnd="@+id/km"
                    android:onClick="onToggleClicked"
                    android:text="ON"
                    android:textColor="#1994F9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/speedlimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/toggleLimit"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/toggleLimit"
                    android:text="" />


                <View
                    android:id="@+id/bar"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ssfText"
                    android:background="#11000000" />


                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="19dp"
                    android:background="#01CCCCCC"
                    app:np_dividerColor="@color/colorAccent"
                    app:np_dividerDistance="30dp"
                    app:np_dividerThickness="3dp"
                    app:np_height="64dp"
                    app:np_max="50"
                    app:np_min="0"
                    app:np_orientation="horizontal"
                    app:np_selectedTextColor="@color/colorSelected"
                    app:np_selectedTextSize="20dp"
                    app:np_textColor="@color/colorPrimary"

                    app:np_textSize="15dp"
                    app:np_typeface="5"
                    app:np_value="20"
                    app:np_wheelItemCount="5"
                    app:np_width="180dp" />

                <TextView
                    android:id="@+id/km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="33dp"
                    android:layout_marginEnd="33dp"
                    android:text="km/h"
                    android:textSize="20dp" />


                <RadioGroup
                    android:id="@+id/minmax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/km"
                    android:layout_marginStart="34dp">

                    <RadioButton
                        android:id="@+id/max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Max"
                        android:textOff="Max"
                        android:textOn="Max" />

                    <RadioButton
                        android:id="@+id/min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Min"
                        android:textOff="Min"
                        android:textOn="Min" />


                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sound"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/ssf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Sound Safety Function"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"/>

                <Button
                    android:id="@+id/volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ssf"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp"
                    android:text="save"
                    android:textSize="12sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#11000000"
                    android:layout_below="@id/ssf"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/musicV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/seekBar1"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    android:text="Music Volume" />

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/aroundSeek"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    android:text="Around Volume" />

                <SeekBar
                    android:id="@+id/aroundSeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="29dp"
                    android:max="100"
                    android:progress="50" />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/Appinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tableMenu"
            android:background="#22FFFFFF"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shapewithcolor"
                android:padding="5dp"
                android:text="App Info"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:src="@drawable/routelogowhite" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Route : Running with Our User Tracking Experience"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Route. v1.0.0"
            android:textAlignment="center"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="개발자 정보"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="소프트웨어학과 모바일 프로그래밍 텀 프로젝트"
            android:textAlignment="center"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="박영준 배범준 이원찬"
            android:textAlignment="center"
            android:textSize="15sp" />


        </LinearLayout>



    </LinearLayout>

</ScrollView>