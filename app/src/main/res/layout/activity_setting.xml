<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tableMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow android:layout_width="match_parent">


                <ImageButton
                    android:id="@+id/runText"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape"
                    android:cropToPadding="false"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/travel" />


                <ImageButton
                    android:id="@+id/shareText"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape"
                    android:cropToPadding="false"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/share" />


                <ImageButton
                    android:id="@+id/setText"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:background="@drawable/shapewithcolor"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/settings" />

            </TableRow>
        </TableLayout>


        <LinearLayout
            android:id="@+id/settingFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tableMenu"
            android:background="#33FFFFFF"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shapewithcolor"

                android:text="User Info"
                android:textSize="20dp"
                android:padding="5dp"
                android:textStyle="bold|italic" />

            <RelativeLayout
                android:id="@+id/userInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/userIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/userIcon"
                    android:padding="5dp"
                    android:text="ID:"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtView"
                    android:text="chany219"

                    android:textSize="20dp" />

                <Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/deleteAccountBtn"
                    android:background="@drawable/shapebutton"
                    android:text="Logout"
                    android:textColor="#1994F9"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/deleteAccountBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shapebutton"
                    android:text="Withdrawal"
                    android:textColor="#1994F9"
                    android:textSize="10sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Velocity Control"
                    android:textSize="20dp"

                    />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:text="ON"
                    android:textColor="#1994F9"
                    android:textSize="12sp"

                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:np_width="180dp"
                    app:np_height="64dp"
                    app:np_dividerColor="#22000000"
                    app:np_max="50"
                    app:np_min="0"
                    app:np_orientation="horizontal"
                    app:np_selectedTextColor="@color/colorPrimary"
                    app:np_selectedTextSize="15dp"
                    app:np_textColor="@color/colorAccent"
                    app:np_textSize="10dp"
                    app:np_typeface="5"
                    app:np_value="3" />

                <TextView
                    android:id="@+id/km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/number_picker"
                    android:text="km/h"
                    android:textSize="20dp" />



                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <RadioButton
                        android:id="@+id/maxBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="Max"
                        android:textOff="Max"
                        android:textOn="Max" />

                    <RadioButton
                        android:id="@+id/minBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Min"
                        android:textOff="Min"
                        android:textOn="Min" />


                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Sound control"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shapebutton"
                    android:text="save"
                    android:textColor="#1994F9"
                    android:textSize="12sp"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:text="Music Volume" />

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView1"
                    android:max="200"
                    android:progress="50" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seekBar1"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:text="Around Volume" />

                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:max="200"
                    android:progress="50" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bbbb"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bbbb"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bbbb"/>




            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bbbb"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bbbb"/>



        </LinearLayout>


    <LinearLayout
        android:id="@+id/Appinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tableMenu"
        android:background="#22FFFFFF"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shapewithcolor"
            android:text="App Info"
            android:textSize="20dp"
            android:padding="5dp"
            android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/routelogowhite"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route : Running with Our User Tracking Experience"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route. v1.0.0"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="개발자 정보"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="가천대학교 소프트웨어학과 모바일 프로그래밍 텀 프로젝트"
            android:textSize="15sp"
            android:textAlignment="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="박영준 배범준 이원찬"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            />


    </LinearLayout>

</ScrollView>